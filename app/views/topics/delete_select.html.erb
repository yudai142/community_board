<div class="vsc-initialized">
  <section>
  	<p class="alignC"><img src="/assets/bar/bar_interact.png" width="100%" alt="情報交換BBS"></p>
  </section>
  
  <section id="content_area">
  	<div id="content_main_area" class="in_box_sizing" style="z-index:2;">
      <div id="content_main_area_in">
        <div class="category_area">
          <%= form_for @select_topics, url: delete_confirm_topics_path do |f| %>
			      <table width="100%" border="0" cellpadding="0" cellspacing="0" summary="">
			      	<tr>
			      		<td class="td_txt_explanation" style="width:60%">
			      			削除する投稿トピックにチェックを入れてください。<br>
                  ※削除を行った項目は復旧させることはできませんのであらかじめ<br>
                  ご了承ください。
			      		</td>
			      		<td class="btn_submit_area" style="align:right;vertical-align:middle;">
			      	  	<input type="button" value="戻る" class="btn_delete in_box_sizing" style="width:95%;" onclick="location.href='/'">
			      	  </td>
                <% if @topic.present? %>
                  <td class="btn_submit_area" style="align:right;vertical-align:middle;">
			      		    <input type="submit" name="ibbs_contribution_comment_input" value="削除を確認する" class="btn_submit in_box_sizing" style="width:95%">
			      	    </td>
                <%end%>
			      	</tr>
            </table>
        </div><!-- category_area -->

    <div class="category_area" style="position:relative;">
        <table width="100%" border="0" cellpadding="0" cellspacing="0" summary="">
          <tr>
            <td class="td_category"><img src="/assets/category/category_contribution_list.png" alt="投稿入力フォーム"></td>
            <td style="cursor: pointer;" class="td_txt_explanation">
	  		    <span class="txt_contribution_title">削除するトピックを選択してください。</span>
	  	      </td>
          </tr>
          <tr><td></td><td><hr style="visibility:hidden"></td></tr>
        </table>
        <table class="contribution_list_table" width="100%" border="0" cellpadding="0" cellspacing="0" summary="">
          <tr>
            <td class="contribution_no_first">トピック名</td>
            <td class="contribution_no_first">ステータス</td>
            <td class="contribution_no_first">カテゴリー</td>
            <td class="contribution_no_first">作成日</td>
            <td class="contribution_no_first">削除選択/編集</td>
          </tr>
          <% @topic.each do |topic| %>
          <tr>
            <td class="txt_comment_name" align="left"><%= link_to "#{topic.title}", topic_path(topic.id), class:"blue", style:"text-decoration:none;" %></td>
            <td class="txt_comment_date">閲覧数:<%= topic.impressions.length %>　回答数:<%= topic.comments.length %>　評価数:<%= topic.topic_likes.length %></td>
            <td class="txt_comment_date"><%= topic.category.name %></td>
            <td class="txt_comment_date"><%= topic.created_at.strftime("%Y/%m/%d") %></td>
            <td class="contribution_delete"><%= check_box_tag 'topic[id][]', topic,false, value:"#{topic.id}", selected:'topic[id][]' %><%= label_tag :id, "削除する" %>/<%= link_to "トピックを編集する", "/topics/#{topic.id}/edit", method: :get, class:"blue", style:"text-decoration:none;" %></td>
          </tr>
          <%end%>
        </table>
      <%end%>
    </div>

    

      </div>
    </div>
  </section>