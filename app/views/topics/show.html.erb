	<div class=cs1 style="background-color:#000000;display:block;margin-left:auto;margin-right:auto;text-align:center;width:90%;border-radius:10px;">
		<%= image_tag  '/assets/px1.png', id:"pcross", alt:"画像", style:"
				display:block;
